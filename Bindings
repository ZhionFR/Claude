import React, { useState } from 'react';

const ResizeCircleApp = () => {
  const [radius, setRadius] = useState(50);
  const containerSize = 300;
  const blackCircleRadius = 100;
  
  const handleRadiusChange = (e) => {
    setRadius(Number(e.target.value));
  };
  
  return (
    <div className="flex flex-col items-center justify-center p-8 bg-gray-100 rounded-lg shadow-md w-full max-w-lg mx-auto">
      <h1 className="text-2xl font-bold mb-6 text-gray-800">Redimensionnement de Cercle</h1>
      
      <div 
        className="relative mb-8 bg-white rounded-full shadow-lg"
        style={{
          width: containerSize,
          height: containerSize,
        }}
      >
        <div 
          className="absolute bg-black rounded-full"
          style={{
            width: blackCircleRadius * 2,
            height: blackCircleRadius * 2,
            top: '50%',
            left: '50%',
            transform: 'translate(-50%, -50%)',
          }}
        />
        
        <div 
          className="absolute bg-blue-500 rounded-full transition-all duration-300"
          style={{
            width: radius * 2,
            height: radius * 2,
            top: '50%',
            left: '50%',
            transform: 'translate(-50%, -50%)',
          }}
        />
      </div>
      
      <div className="w-full px-4">
        <label className="block text-sm font-medium text-gray-700 mb-2">
          Rayon du cercle: {radius} px
        </label>
        <input
          type="range"
          min="0"
          max="150"
          value={radius}
          onChange={handleRadiusChange}
          className="w-full h-2 bg-gray-300 rounded-lg appearance-none cursor-pointer"
        />
        <div className="flex justify-between mt-1 text-xs text-gray-500">
          <span>0px</span>
          <span>150px</span>
        </div>
      </div>
    </div>
  );
};

export default ResizeCircleApp;